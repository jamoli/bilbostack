    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="initial-scale=1.0, width=device-width">
        <title>{% block titulo '' %} - Bilbostack</title>
        <link rel="profile" href="http://gmpg.org/xfn/11">
        <!-- Stylesheets -->
{% for asset in ['reset.css', 'style.css', 'media-queries.css', 'twitter.css'] %}
        <link rel="stylesheet" href="{{ app.request.basepath }}/css/{{ asset }}" type="text/css" media="screen">
{% endfor %}
        <!-- Icons -->
        <link rel="shortcut icon" href="{{ app.request.basepath }}/favicon.png">
        <script type='text/javascript' src='{{ app.request.basepath }}/js/jquery.js?ver=1.7.2'></script>
        <script type='text/javascript' src='{{ app.request.basepath }}/js/comment-reply.js?ver=3.4.2'></script>
        <meta name="generator" content="Silex {{ constant("\\Silex\\Application::VERSION") }}">
        <link rel='canonical' href='http://bilbostack.com/'>
    </head>

    <body class="{% block body_class %}{% endblock %}">
        <div id="header-full">
            <div id="header" class="container clearfix">
                <div id="top" class="clearfix">
                    <div class="location">
                        <div class="identity clearfix">
                            <a href="{{ url('portada') }}" title="BilboStack"><img src="{{ app.request.basepath }}/img/logo.png"></a>
                        </div>
                    </div><!-- end .location -->
                </div><!-- end #top -->
                <div id="navigation" class="clearfix">
                    {# el menú principal se repite dos veces, una de ellas "optimizada" para móviles #}
                    {% include '_menu_principal.twig' %}

                    <div id="mobile-container">
                        {% include '_menu_principal.twig' with { 'id': 'mobilemenu', 'clase_css': 'menu' } %}
                    </div> <!-- end #mobile-container -->
                </div><!-- end #navigation -->
            </div><!-- end #header -->
        </div><!-- end #header-full -->
        
        {% block contenido %}{% endblock %}
        
        <div id="sponsors-full" style="border-top:10px solid #EAEAEA;padding-bottom: 30px">
            <div id="sponsors" style="padding-left: 65px;" class="container clearfix">
            {% for patrocinador in app.patrocinadores %}
                <div class="sponsor clearfix {{ patrocinador.slug }}">
                    <a href="{{ patrocinador.url }}" title="{{ patrocinador.nombre }}"><img src="{{ app.request.basepath }}/img/logo-{{ patrocinador.slug }}.png" class="attachment-sponsor-image wp-post-image" alt="{{ patrocinador.nombre }}"></a>
                </div><!-- end .sponsor -->
            {% endfor %}
            </div>
        </div>
        <div id="footer-full">
            <div id="footer" class="container clearfix">
                <p id="credits">
                    &copy; {{ 'now'|date('Y') }} <a href="{{ url('portada') }}">BilboStack</a>
                </p><!-- end #credits -->
            </div><!-- end #footer -->
        </div><!-- end #footer-full -->
{% for asset in [
    'jquery.easing.js',
    'jquery.fitvids.js',
    'jquery.flexslider.js',
    'jquery.cycle.js',
    'css3-mediaqueries.js',
    'jquery.mobilemenu.js',
    'plugin.init.js',
] %}
        <script type='text/javascript' src='{{ app.request.basepath }}/js/{{ asset }}?ver={{ app.version_assets }}'></script>
{% endfor %}
        <script type="text/javascript">
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-36416361-X']);
            _gaq.push(['_trackPageview']);

            (function() {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();
        </script>
    </body>
</html>